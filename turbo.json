{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["EV_*", "VITE_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "e2e:test": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**", ".nyc_output/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^lint:fix"],
      "outputs": [
        "src/**",
        "lib/**",
        "test/**",
        "*.[m][tj]s",
        "*.html",
        "*.json",
        "*.md"
      ]
    },
    "format:check": {
      "dependsOn": []
    },
    "lint": {
      "dependsOn": []
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": ["src/**", "lib/**", "test/**", "*.[mc][tj]s"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "lib/**/*.ts", "test/**/*.ts"]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "lib/**/*.ts", "test/**/*.ts"]
    },
    "preview": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
