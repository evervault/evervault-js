{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "types": ["vitest/globals", "node"],
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"]
}
