{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "outDir": "build",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "build",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__mocks__"
  ]
}
