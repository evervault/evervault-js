{
  "name": "@evervault/react-native",
  "description": "Evervault SDK for React Native",
  "version": "2.5.1",
  "source": "./src/index.ts",
  "main": "./build/cjs/index.js",
  "react-native": "./build/esm/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/esm/index.d.ts",
  "files": [
    "build",
    "ios",
    "android",
    "native-evervault.podspec",
    "!build/**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evervault/evervault-js.git"
  },
  "author": "Engineering <engineering@evervault.com> (https://evervault.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evervault/evervault-js/issues"
  },
  "homepage": "https://docs.evervault.com/sdks/react-native",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prebuild": "pnpm codegen",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "codegen": "rimraf build android/app && react-native codegen",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-webview": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@react-native-community/cli": "*",
    "@react-native/babel-preset": "^0.81.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "catalog:",
    "glob": "^11.0.3",
    "react": "catalog:",
    "react-native": "catalog:",
    "react-native-webview": "catalog:",
    "react-test-renderer": "18.2.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.9",
    "tsconfig": "workspace:*",
    "vitest": "catalog:",
    "vitest-react-native": "^0.1.5"
  },
  "codegenConfig": {
    "name": "NativeEvervaultSpec",
    "type": "all",
    "jsSrcsDir": "./src",
    "android": {
      "javaPackageName": "com.nativeevervault"
    },
    "ios": {
      "componentProvider": {
        "ApplePayButtonView": "ApplePayButtonView"
      },
      "modulesProvider": {
        "NativeEvervault": "NativeEvervault"
      }
    }
  },
  "dependencies": {
    "@evervault/card-validator": "workspace:*",
    "@hookform/resolvers": "^4.1.3",
    "react-hook-form": "^7.54.2",
    "react-native-mask-input": "^1.2.3",
    "zod": "^3.24.2"
  }
}
